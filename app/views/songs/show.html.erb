

<div class="main-image-container">
  <img class="main-image" src="<%= @song.image_url %>" alt="">
</div>

<h1><%= @song.name %></h1>
<div class="main-rating">
  <i class="fa fa-star"></i>
  <i class="fa fa-star"></i>
  <i class="fa fa-star"></i>
  <i class="fa fa-star"></i>
  <i class="fa fa-star"></i>
</div>

<hr>

<div class="container artist-songs">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ol>
        <% @song.song_ratings.each do |song_rating| %>
          <li>
            <span><a href="<%= user_url(song_rating.user) %>"><%= song_rating.user.name %></a></span>
            <div class="inline-rating">
              <% song_rating.rating.times do %>
                <i class="fa fa-star"></i>
              <% end %>
            </div>
          </li>
        <% end %>

      </ol>
    </div>
  </div>
</div>


<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Song #<%= @song.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Artist</dt>
              <dd><%= @song.artist_id %></dd>

              <dt>Name</dt>
              <dd><%= @song.name %></dd>

              <dt>Image url</dt>
              <dd><%= @song.image_url %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to songs_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_song_url(@song.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to song_url(@song.id), :method => "delete", :data => { :confirm => "Do you really want to delete this song?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
